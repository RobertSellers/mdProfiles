{
  "increment": "patch",
  "git": {
    "tagName": "v${version}",
    "requireCommits": true
  },
  "hooks": {
    "before:init": [
      "rm -rf dist/*",
      "npm test",
      "git checkout -- dist/* index.js"
    ],
    "after:bump": "npm run build",
    "after:release": [
      "cp resources/* pages -r",
      "npx replace-in-file VERSION \"${version}\" pages/**/*.json",
      "NODE_DEBUG=gh-pages node ./scripts/pages"
    ]
  }
}
